<% if pagy.pages > 1 %>
  <nav class="mt-6 flex justify-center items-center space-x-1 text-sm text-gray-700" aria-label="Pagination">
    <% if pagy.prev %>
      <%= link_to "← Prev", url_for(page: pagy.prev), class: "px-3 py-1 border border-gray-300 rounded hover:bg-gray-100 transition" %>
    <% end %>

    <% pagy.series.each do |item| %>
      <% if item.is_a?(Integer) %>
        <%= link_to item, url_for(page: item), class: "px-3 py-1 border rounded #{item == pagy.page ? 'bg-blue-600 text-white border-blue-600' : 'border-gray-300 hover:bg-gray-100'} transition" %>
      <% else %>
        <span class="px-3 py-1 text-gray-400"><%= item %></span>
      <% end %>
    <% end %>

    <% if pagy.next %>
      <%= link_to "Next →", url_for(page: pagy.next), class: "px-3 py-1 border border-gray-300 rounded hover:bg-gray-100 transition" %>
    <% end %>
  </nav>
<% end %>
